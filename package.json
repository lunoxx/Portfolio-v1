{
  "name": "express-blog",
  "version": "1.0.0",
  "description": "Create a portfolio website using NodeJS with Express, EJS and Contentful API",
  "main": "app.js",
  "scripts": {
    "tailwind:css": "postcss public/css/source.css -o public/css/style.css --watch",
    "dev": "concurrently \"nodemon app.js\" \"postcss public/css/source.css -o public/css/style.css --watch\"",
    "build": "ncc build app.js -o dist"
  },
  "author": "Mesesan Alin",
  "license": "ISC",
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^16.0.2",
    "autoprefixer": "^10.4.13",
    "body-parser": "^1.20.1",
    "concurrently": "^7.6.0",
    "contentful": "^9.3.0",
    "datetime-js": "^4.0.0",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@vercel/ncc": "^0.36.1",
    "tailwind-scrollbar": "^2.1.0",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.2.4"
  }
}
