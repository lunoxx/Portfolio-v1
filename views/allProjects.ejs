
<head>
    <%- include('layouts/head') %>
    <title><%= title %></title>
</head>

<%- include('layouts/header'); -%>
    
    <div class="mx-auto max-w-screen-lg px-3 py-6">
        <h1 class="text-2xl font-bold mb-8">View <span class="bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-transparent">all Projects</span></h1>

        <div class="grid gap-4 grid-cols-1 sm:grid-cols-2 md:grid-cols-3">
            <% projects.forEach(function(project) { %>

                <!-- CARD -->
                <div class="border rounded-lg shadow bg-gray-800 border-gray-700 flex flex-col relative 
                
                transform transition duration-300 hover:scale-105">

                    <!-- IMAGE -->
                    <a href="projects/<%=project.slug%>" class="h-56 w-full rounded-t-lg mx-auto bg-cover bg-center shadow-[inset_0px_-36px_34px_-20px_rgba(31,41,55,0.53)]" style="background-image:url('<%=project.thumbnail_image.url%>')"></a>

                    <!-- TITLE & BODY -->
                    <div class="p-5 mb-14">
                        <a href="projects/<%=project.slug%>" class="text-2xl font-bold tracking-tight text-white hover:text-sky-500 duration-150">
                            <%=project.title %>
                        </a>
                        <div class="mt-2 font-normal text-gray-400 overflow-x-auto scrollbar-hide"><%- project.description %></div>
                    </div>

                    <!-- READ MORE -->
                    <a href="projects/<%=project.slug%>" class="absolute bottom-5 right-5 inline-flex items-center
                          border focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center border-gray-600 text-gray-400 hover:text-white hover:bg-gray-600 focus:ring-gray-800 hover:duration-300">
                        Read more
                        <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    </a>
                </div>

            <% }) %>
        </div>
    </div>

<%- include('layouts/footer'); -%>