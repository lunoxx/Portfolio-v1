    <body class="bg-slate-900 text-gray-100">
        <div class="mx-auto max-w-screen-lg px-3 py-6">
          <div class="flex flex-col gap-y-3 sm:flex-row sm:items-center sm:justify-between">
            <a href="/demo/astro-boilerplate">
              <div class="flex items-center bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-xl font-bold text-transparent">
                <svg class="mr-1 h-10 w-10 stroke-cyan-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M0 0h24v24H0z" stroke="none"></path>
                  <rect x="3" y="12" width="6" height="8" rx="1"></rect>
                  <rect x="9" y="8" width="6" height="12" rx="1"></rect>
                  <rect x="15" y="4" width="6" height="16" rx="1"></rect>
                  <path d="M4 20h14"></path>
                </svg><%=constants.SEO.nav_title %>
              </div>
            </a>

            <!-- navbar buttons -->
            <nav>
              <ul class="flex gap-x-3 font-medium text-gray-200">
                <li class="hover:text-white">
                  <a href="/demo/astro-boilerplate/posts">Blog</a>
                </li>
                <li class="hover:text-white">
                  <a href="<%=constants.author.github %>" target="_blank">GitHub</a>
                </li>
              </ul>
            </nav>
          </div>
        </div>

        <!-- Hero section -->
        <div class="mx-auto max-w-screen-lg px-3 py-6">
            <div class="flex flex-col items-center md:flex-row md:justify-between md:gap-x-24">
                <div>
                    <h1 class="text-3xl font-bold">Hi there, I'm <span class="bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-transparent"><%=constants.author.full_name %></span>
                        <span class="animate-waving-hand inline-block">ðŸ‘‹</span>
                    </h1>

                    <p class="mt-6 text-xl leading-9"><%=constants.SEO.hero_text%></p>

                    <!-- social buttons -->
                    <div class="mt-9 flex gap-4 justify-center md:justify-start">
                        <a href="<%=constants.author.github %>" target="_blank">
                            <i class="fa-brands fa-github text-sky-500 text-2xl hover:translate-y-1 hover:duration-500"></i>
                        </a>
                        <a href="<%=constants.author.facebook %>" target="_blank">
                            <i class="fa-brands fa-facebook text-sky-500 text-2xl hover:translate-y-1 hover:duration-500"></i>
                        </a>
                        <a href="<%=constants.author.linkedin %>" target="_blank">
                            <i class="fa-brands fa-linkedin text-sky-500 text-2xl hover:translate-y-1 hover:duration-500"></i>
                        </a>
                    </div>
                </div>
                <div class="absolute z-[-1] opacity-10 md:opacity-100 md:z-0 md:relative md:flex md:shrink-0">
                    <img class="h-80 w-64" src="images/avatar.png" alt="Avatar image">
                </div>
            </div>
        </div>

        <!-- Topics -->

        <div class="mx-auto max-w-screen-lg px-3 py-6">
          <div class="mb-6 text-2xl font-bold">Recent <span class="bg-gradient-to-br from-sky-500 to-cyan-400 bg-clip-text text-transparent">Projects</span>
          </div>
          <div class="flex flex-col gap-6">

            <% topics.forEach(function(entry) { %>
                <div class="flex flex-col items-center gap-x-8 rounded-md bg-slate-800 p-3 md:flex-row">
                    <div class="shrink-0">
                        <a href="/demo/astro-boilerplate">
                            <img class="h-36 w-36 hover:translate-y-1 hover:duration-700 rounded-l-xl" src="<%= entry.image.url %>" alt="Project Web Design" loading="lazy">
                        </a>
                    </div>
                    <div>
                        <div class="flex flex-col items-center gap-y-2 md:flex-row">
                            <a class="hover:text-cyan-400" href="/demo/astro-boilerplate">
                                <!-- PROJECT TITLE -->
                                <div class="text-xl font-semibold"><%- entry.title %></div>
                            </a>
                            <div class="ml-3 flex gap-2">

                                <% if(entry.tags.length) { %>
                                    <% for(var i = 0, j = entry.tags.length; i < j; i++) { %>
                                        <% const tag = entry.tags[i].sys.id %>

                                        <div class="rounded-md px-2 py-1 text-xs font-semibold <%=tagsConfig[''+ tag +''].colors %>"><%=tagsConfig[''+ tag +''].tagName %></div>

                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                        <div class="mt-3 text-gray-300">
                          <%- entry.description %>
                        </div>
                    </div>
                </div>
            <% }) %>

          </div>
        </div>
